#define VEC4_IS_EQUAL_FIXED_EPS_TEST(VUP0, VUP1, P0X, P0Y, P0Z, P0W, P1X, P1Y, P1Z, P1W, R0) \
    {                                                                   \
        const VUP0 Vec4f v0 = Vec4f_ctor((VUP0 float) (P0X), (VUP0 float) (P0Y), (VUP0 float) (P0Z), \
