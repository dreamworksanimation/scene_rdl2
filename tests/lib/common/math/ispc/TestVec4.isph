            any(v.z != ((VUP0 float) (P0) OP (VUP1 float) (P1Z))) ||    \
            any(v.w != ((VUP0 float) (P0) OP (VUP1 float) (P1W)))) {    \
            ++error;                                                    \
        }                                                               \
